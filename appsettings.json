{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "EnvironmentFilePath": "C:\\Users\\NSarshar\\Desktop\\ENV\\test.env",
  "ConversationPreprocessing": {
    "Enabled": true,
    "PiiDetection": {
      "Enabled": true,
      "RedactionMode": "Anonymize",
      "PiiCategories": [
        "PhoneNumber",
        "EmailAddress",
        "CreditCardNumber",
        "SocialSecurityNumber"
      ]
    },
    "Logging": {
      "LogOriginalText": false,
      "LogProcessedText": true,
      "LogDetections": false
    },
    "PiiPatterns": {
      "PhoneNumber": "\\b\\d{3}[-.]?\\d{3}[-.]?\\d{4}\\b",
      "EmailAddress": "\\b[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\\.[A-Za-z]{2,}\\b",
      "CreditCardNumber": "\\b\\d{4}[\\s-]?\\d{4}[\\s-]?\\d{4}[\\s-]?\\d{4}\\b",
      "SocialSecurityNumber": "\\b\\d{3}-\\d{2}-\\d{4}\\b"
    }
  }
}
